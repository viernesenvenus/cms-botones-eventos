        letter-spacing: 0.24px;
        line-height: 20px;
        color: #121212;
      }
    }

    .tmpe-logo-container {
      width: 56px;
      height: 56px;
      border-radius: 4px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .tmpe-logo-interbank { background: #1A1A1A; }
    .tmpe-logo-ticketmaster { background: #0744BD; }
