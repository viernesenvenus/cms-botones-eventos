    }
    
    .preview-mobile-mode .tmpe-mobile-view .tmpe-ticket-title {
      font-size: 18px;
      line-height: 20px;
      letter-spacing: 0.32px;
      color: #121212;
      margin-bottom: 2px;
    }
    
    .preview-mobile-mode .tmpe-mobile-view .tmpe-date-text {
      font-size: 14px;
      line-height: 20px;
      letter-spacing: 0.28px;
      color: #828282;
