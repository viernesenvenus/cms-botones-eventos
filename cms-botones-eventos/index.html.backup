      padding: 16px 24px;
      background: #f8fafc;
      color: #4a5568;
      border: 2px solid #e2e8f0;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      margin-top: 20px;
      transition: all 0.2s ease;
      position: relative;
      z-index: 1002;
    }

    #show-code-button:hover {
      background: #e2e8f0;
      color: #2d3748;
      border-color: #cbd5e0;
    }

    /* Estilos para botones de venta renderizados */
    .tmpe-ticket-item {
      display: flex;
      align-items: center;
      padding: 20px 24px;
      background: #fff;
      border-bottom: 1px solid #D6D6D6;
      position: relative;
      justify-content: space-between;
      gap: 24px;
      margin-bottom: 8px;
      border-radius: 4px;
    
    }

    /* Vista desktop por defecto */
    .tmpe-desktop-view {
      display: flex;
      align-items: center;
      width: 100%;
      justify-content: space-between;
      gap: 24px;
    }

    /* Vista mobile oculta por defecto */
    .tmpe-mobile-view {
      display: none;
      width: 100%;
    }

    /* En mobile, ocultar desktop y mostrar mobile */
    @media (max-width: 768px) {
      .tmpe-desktop-view {
        display: none;
      }
      
      .tmpe-mobile-view {
